<h1>Bookings</h1>
<% @count.times  do %>
<%= form_with model: @booking,url: bookings_path do |f| %>
  <% i = 1 %>
  <%= f.fields_for :passengers do |passenger| %>
    <%= "Passenger #{i}" %><br />
    <%= passenger.label :name, "Name" %>
    <%= passenger.text_field :name %><br />
    <%= passenger.label :email,"Email" %>
    <%= passenger.email_field :email %><br />
    <% i+=1 %>
  <% end %>
  <%= f.hidden_field :flight_id, value: @flight.id %>
  <%= f.submit "Confirm Tickets" %>
<% end %>
<%end%>